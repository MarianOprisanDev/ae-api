extends layout

block content

    .container
        .card
            .card-content

                h3 Customer List
                .card-action
                    a.right(href='/add-customer') Add Customer
                
                .container
                    .collection
                        each customer, i in customers
                            a.collection-item(href="/customer/" + customer._id)
                                span.customer-city #{ customer.city }: 
                                span.customer-name #{ customer.name }
                                